<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="slidemenu">
      <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
        <% if user_signed_in? %>
          <li class="">
            <!-- ↓以下のコードは、5章で正しいroutingに書き直します。 -->
            <%= link_to 'Home', user_path(current_user) %>
          </li>
          <li class="">
            <!-- ↓以下のコードは、5章で正しいroutingに書き直します。 -->
            <%= link_to 'Users', users_path %>
          </li>
          <li class="">
            <!-- ↓以下のコードは、5章で正しいroutingに書き直します。 -->
            <%= link_to 'Books', books_path %>
          </li>
          <li class="">
            <%= link_to "logout", destroy_user_session_path, method: :delete %>
          </li>
          <li class="">
            <!-- ↓以下のコードは、5章で正しいroutingに書き直します。 -->
            <%= link_to 'New', new_book_path %>
          </li>
          <li>
            <%= link_to "User_info", "/user_info/#{current_user.id}" %>
          </li>
        <% else %>
          <li class="">
            <!-- ↓以下のコードは、5章で正しいroutingに書き直します。 -->
            <%= link_to 'Home', "/" %>
          </li>
          <li class="">
            <!-- ↓以下のコードは、5章で正しいroutingに書き直します。 -->
            <%= link_to 'About', "about" %>
          </li>
          <li class="">
            <%= link_to "sing up", new_user_registration_path %>
          </li>
          <li class="">
            <%= link_to "login", new_user_session_path %>
          </li>
        <% end %>
      </ul>
    </div>
    <%= yield %>
  </body>
</html>
