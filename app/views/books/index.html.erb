<div class = "container">
	<div class = "row">
		<div class = "col-md-4">
			<%= render "users/info", user: current_user %>
			<%= render "books/new", book: @new_book %>
		</div>
		<div class = "col-md-8">
			<div class = "index-title">
				<h2>Books</h2>
			</div>
			<div class = "index-items">
				<table class = "table table-striped">
					<tr align = "center">
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
							<!-- 繰り返し処理 -->
					<% @books.each do |book| %>
						<tr>
							<td>
								<%= link_to user_path(book.user) do %>
									<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: "jpeg", fallback: "no_image.jpg" %>
								<% end %>
							</td>
							<td>
								<%= link_to book.title, book_path(book) %>
							</td>
							<td><%= book.body %></td>
						</tr>
					<% end %>
					<%= paginate @books, class: "paginate" %>
				</table>
			</div>
		</div>
	</div>
</div>
