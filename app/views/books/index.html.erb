<div class = "index-title">
	<h2>Books</h2>
</div>
<div class = "index-items">
	<table>
		<tr align = "center">
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
				<!-- 繰り返し処理 -->
		<% @books.each do |book| %>
			<tr>
				<td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: "jpeg", fallback: "no_image.jpg" %>
				</td>
				<td>
					<%= link_to book.title, book_path(book) %>
				</td>
				<td><%= book.body %></td>
			</tr>
		<% end %>
	</table>
</div>
