<h2>New book</h2>
<%= form_for(book, url: books_path) do |f| %>
	<% if book.errors.any? %>
		 <div class="error_explanation">
		 	<p><%= book.errors.count %> erros prohibited this obj from being saved:</p>
		 	<div class ="erro_messages">
		 		<ul>
			 		<% book.errors.full_messages.each do |message| %>
			 			<li><%= message %></li>
			 		<% end %>
		 		</ul>
		 	</div>
		 </div>
	<% end %>
	<p>Title</p>
	<%= f.text_field :title %>
	<p>Opinion</p>
	<%= f.text_area :body %>
	<%= f.submit "Create Book" %>
<% end %>