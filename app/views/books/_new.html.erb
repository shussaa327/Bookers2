<h2>New book</h2>
<%= form_for(book, url: books_path) do |f| %>
	<p>Title</p>
	<%= f.text_field :title, class: "new-book-title" %>
	<p>Opinion</p>
	<%= f.text_area :body, class: "new-book-opinion" %>
	<div class = "create-box">
		<%= f.submit "Create Book", class: "new-book-create" %>
	</div>
<% end %>