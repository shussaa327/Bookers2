<div class = "book-edit">
	<div class = "book-edit-content">
		<h1>Editing Book</h1>

		<% if @book.errors.any? %>
			<div class="error_explanation">
				<p><%= @book.errors.count %> erros prohibited this book from being saved:</p>
				 <div class ="erro_messages">
				 	<% @book.errors.full_messages.each do |message| %>
				 		<li><%= message %></li>
				 	<% end %>
				</div>
			</div>
		<% end %>

		<div class = "edit-content">
			<%= form_for(@book) do |f| %>
				<div class = "edit-title-form form">
					<p>Title</p>
					<%= f.text_field :title,placeholder: @book.title, class: "edit-book-title-form" %>
				</div>
				<div class = "edit-body-form form">
					<p>Body</p>
					<%= f.text_area :body, placeholder: @book.body,class: "edit-book-body-form" %>
				</div>
				<%= f.submit "Update Book", class: "update-book-btn" %>
			<% end %>
		</div>
		<div class = "edit-links">
			<%= link_to "Show", book_path(@book),class: "book-edit-link" %>
			<span>|</span>
			<%= link_to "Back", books_path, class: "book-edit-link" %>
		</div>
	</div>
</div>