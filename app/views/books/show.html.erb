<% if flash[:notice] %>
	<div class = "flash">
		<%= flash[:notice] %>
	</div>
<% end %>
<div class = "container">
	<div class = "row">
		<div class = "col-md-4">
			<%= render "users/info", user: @user %>
			<%= render "books/new", book: @new_book %>
		</div>
		<div class = "col-md-8">
			<div class = "book-show-title">
				<h2>Book detail</h2>
			</div>
			<div class = "index-items">
				<table class = "table table-striped">
					<tr>
						<td>
							<%= link_to user_path(@user) do %>
							<%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: "jpeg", fallback: "no_image.jpg" %><br>
						<%= @book.user.name %>
						<% end %>
						</td>
						<td>
							<%= link_to @book.title, book_path(@book) %>
						</td>
						<td><%= @book.body %></td>
						<% if @book.user_id == current_user.id %>
							<td><%= link_to "Edit", edit_book_path(@book) %></td>
							<td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
						<% end %>
					</tr>
				</table>
			</div>
		</div>
	</div>
</div>
