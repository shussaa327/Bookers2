<div class = "index-title">
	<h2>Users</h2>
</div>
<div class = "index-items">
	<table>
		<tr align = "center">
			<th>image</th>
			<th>name</th>
			<th></th>
		</tr>
				<!-- 繰り返し処理 -->
		<% @users.each do |user| %>
			<tr>
				<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: "jpeg", fallback: "no_image.jpg" %>
				</td>
				<td><%= user.name %></td>
				<td><%= link_to "Show", user_path(user) %></td>
			</tr>
		<% end %>
	</table>
	</div>
</div>